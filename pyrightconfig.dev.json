{
  "include": ["src"],
  "exclude": ["env", "**/__pycache__", "**/migrations", "**/tests*", "**/*_integration.py", "**/types_extensions.py"],
  "extraPaths": ["src"],
  "pythonVersion": "3.12",
  "typeCheckingMode": "basic",
  
  "_comment": "Эта конфигурация фокусируется только на критических проблемах типизации",
  
  "reportMissingImports": "error",
  "reportMissingTypeStubs": "none",
  "reportUnknownMemberType": "none",
  "reportUnknownArgumentType": "none", 
  "reportUnknownVariableType": "none",
  "reportUnknownParameterType": "none",
  "reportAttributeAccessIssue": "none",
  "reportArgumentType": "none",
  "reportAssignmentType": "none",
  "reportCallIssue": "none",
  "reportReturnType": "warning",
  
  "_comment2": "Полезные предупреждения для разработки",
  "reportOptionalMemberAccess": "warning",
  "reportOptionalSubscript": "warning", 
  "reportOptionalIterable": "warning",
  "reportOptionalCall": "warning",
  "reportOptionalOperand": "warning",
  "reportUnusedImport": "warning",
  "reportUnusedVariable": "warning",
  "reportDuplicateImport": "error",
  "reportConstantRedefinition": "error",
  "reportInvalidStringEscapeSequence": "error",
  
  "_comment3": "Отключаем Django-специфичные проблемы",
  "reportGeneralTypeIssues": "none",
  "reportPrivateUsage": "none",
  "reportUntypedFunctionDecorator": "none",
  "reportUntypedClassDecorator": "none",
  "reportUntypedBaseClass": "none",
  "reportIncompatibleMethodOverride": "none",
  "reportUnnecessaryIsInstance": "none",
  "reportUnnecessaryComparison": "none",
  "reportUnusedClass": "none",
  "reportUnusedFunction": "none",
  
  "stubPath": "stubs",
  "venvPath": ".",
  "venv": "env"
}